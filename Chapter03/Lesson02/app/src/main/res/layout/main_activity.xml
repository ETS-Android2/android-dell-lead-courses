<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/main_activity_play_audio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/play_audio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_title" />

    <Button
        android:id="@+id/main_activity_play_video"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/play_video"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_activity_play_audio" />


    <Button
        android:id="@+id/main_activity_stop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/stop"
        app:layout_constraintEnd_toStartOf="@id/main_activity_play"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_activity_play_video" />

    <Button
        android:id="@+id/main_activity_play"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/play"
        app:layout_constraintBottom_toBottomOf="@id/main_activity_stop"
        app:layout_constraintEnd_toStartOf="@id/main_activity_pause"
        app:layout_constraintStart_toEndOf="@id/main_activity_stop"
        app:layout_constraintTop_toTopOf="@id/main_activity_stop" />


    <Button
        android:id="@+id/main_activity_pause"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/pause"
        app:layout_constraintBottom_toBottomOf="@id/main_activity_play"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/main_activity_play"
        app:layout_constraintTop_toTopOf="@id/main_activity_play" />


</androidx.constraintlayout.widget.ConstraintLayout>